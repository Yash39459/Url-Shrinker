<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Document</title>
    <style>
      body {
        background-color: #f8f9fa;
      }
      .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .main-heading {
        text-align: center;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="main-heading">URL Shrinker</h1>
      <div class="form-container my-4">
        <form action="/shortUrls" method="POST" class="form-inline">
          <div class="input-group">
            <input required placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control" />
            <button class="btn btn-success" type="submit">Shrink</button>
          </div>
        </form>
      </div>
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
            <tr>
              <td>
                <a href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
              </td>
              <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
              <td><%= shortUrl.clicks %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>

